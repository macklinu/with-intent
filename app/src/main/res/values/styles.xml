<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LabelText">
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
    </style>
    
    <style name="SectionHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:paddingBottom">@dimen/gap_medium</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Button" parent="@android:style/Widget.DeviceDefault.Button" />

</resources>